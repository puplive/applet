.menu-item {
    width: 0;
    flex: 1;
    text-align: center;
    padding-top: 18rpx;
    font-size: 20rpx;
    height: 80rpx;
    padding-bottom: constant(safe-area-inset-bottom);
    padding-bottom: env(safe-area-inset-bottom);
}

.tabbar_img {
    width: 38rpx;
    height: 38rpx;
    display: block;
    margin: auto;
}

.tabbar_text {
    padding: 10rpx 0 0 0;
    display: block;
    font-size: 26rpx;
}

.clear {
    clear: both;
}

.tab-bar {
    position: fixed;
    width: 100%;
    padding: 0px;
    background-color: #F8F8F8;
    z-index: 99;
    display: flex;
    align-items: center;
}
