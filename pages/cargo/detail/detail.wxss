
.list{
    padding: 8px;
}
.list .item{
    padding: 8px;
    background-color: #fff;
    box-shadow: 0px 1px 5px 0px rgba(0,0,0,0.15);
    border-radius: 2px;
    /* margin-top: 8px; */
}
.list .item:not(:first-child){
    margin-top: 8px;
}
.form-item+.form-item{
    margin-top: 0;
}
.card{
    display: flex;
    margin-bottom: 8px;
}
.card>image{
    width: 194rpx;
    height: 120rpx;
    border-radius: 6px;
    background: rgba(0,0,0,0.04);
    border: 1px dashed rgba(0,0,0,0.15);
    overflow: hidden;
    margin-right: 4px;
}
.card>view.zm{
    margin-right: 8px;
}
