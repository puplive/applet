.page-notice-list{
    height: 100vh;
    display: flex;
    flex-direction: column;
}
.list{
    flex: 1;
    height: 0;
    /* margin: 8px; */
}
.list .item{
    padding: 8px;
}
.list .item+.item{
    /* margin-top: 8px; */
}
.item .p1{
    font-size: 14px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #4A4A4A;
    line-height: 22px;
}
.item .ul{
    background: #FFFFFF;
    box-shadow: 0px 0px 7px 0px rgba(0,0,0,0.07);
    border-radius: 4px;
    padding: 0 5px;
}
.item .ul .li{
    display: flex;
    align-items: center;
    height: 50px;
    
}
.item .ul .li+.li{
    border-top: 1px solid #F4F6F8;
}
.item .ul .li .t1{
    font-size: 14px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #909399;
    line-height: 20px;

    width: 90px;
}
.item .ul .li .t2{
    font-size: 14px;
    font-family: PingFangSC-Regular, PingFang SC;
    font-weight: 400;
    color: #000000;
    line-height: 20px;

    flex: 1;
    overflow:hidden;
    white-space:nowrap;
    text-overflow:ellipsis;
}
.item .ul .li .icon{
    width: 12px;
    height: 12px;
    margin-left: 10px;
}