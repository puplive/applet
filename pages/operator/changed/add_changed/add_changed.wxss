}
.section input{
  height: 112rpx;
  line-height: 112rpx;
}
.picker{
  color:#666;
}
.picker text{ text-overflow:ellipsis; white-space:nowrap; overflow:hidden; font-size: 28rpx;}
.sanjiao{
