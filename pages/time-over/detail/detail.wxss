.page-detail {
    height: 100vh;
    display: flex;
    flex-direction: column;
    background: #F4F6F8;
}

.content {
    flex: 1;
    height: 0;
    overflow: auto;
    padding: 8px;
}

.page-detail .zw {
    background: #FFFBF2;
    border-radius: 4px;
    border: 1px solid #F5CE71;
    margin: 8px 8px 0;
    padding: 16px 10px;
}

.page-detail .zw .p1 {
    font-size: 16px;
    font-weight: 500;
    color: #000000;
    line-height: 22px;
}

.page-detail .zw .p2 {
    display: flex;
    align-items: center;
    margin-top: 3px;
}

.page-detail .zw .p2 .icon {
    width: 20px;
    height: 20px;
    margin-right: 8px;
}

.page-detail .zw .p2 .t1 {
    font-size: 14px;
    color: #4A4A4A;
    margin-right: 16px;
}

.page-detail .zw .p2 .t2 {
    font-size: 14px;
    color: #E54C4A;
    margin-right: 16px;
}

.ul .li {
    padding: 8px;
    background-color: #fff;
    box-shadow: 0px 0px 7px 0px rgba(0,0,0,0.07);
    border-radius: 4px;
}

.ul .li+.li {
    margin-top: 8px;
}

.ul .li .p1 {
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.ul .li .p1+.p1{
    margin-top: 8px;
}
.ul .li .p1.line{
    padding-bottom: 8px;
    border-bottom: 1px solid #F5F7FA;
}
.ul .li .p1 .t0{
    flex: 1;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}
.ul .li .p1 .t1 {
    font-size: 14px;
    color: #000;
}

.ul .li .p1 .t2 {
    font-size: 16px;
    color: #000;
}

.ul .li .p1 .t3 {
    font-size: 14px;
    color: #9B9B9B;
}

.ul .li .p1 .t4 {
    font-size: 14px;
    color: #E54C4A;
}