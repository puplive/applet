page{background-color: #fff;}
.row{margin: 0 0 120rpx;}
.section{
  font-size: 28rpx;
  height: 112rpx; 
  line-height:112rpx;
  border-bottom: 1px solid rgba(0, 0, 0, .1);
  padding: 0 20rpx;
  position: relative;
}
.section input{
  height: 112rpx;
  line-height: 112rpx;
}
.picker{
  color:#666;
}
.picker text{ text-overflow:ellipsis; white-space:nowrap; overflow:hidden; font-size: 28rpx;}
.change_typename{display: none;}
.sanjiao{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top:40rpx;
  right: 20rpx;
}
.desc{
  font-size: 28rpx;
  height: 300rpx;
  line-height:100rpx;
  border-bottom: 1px solid rgba(0, 0, 0, .1);
  padding: 0 20rpx;
  position: relative;
}
.textarea-wrp textarea{
  width: 100%;
  height: 150rpx;
  line-height: 50rpx;
  padding: 10rpx 0 28rpx;
}
.textlimit{
  position: absolute;
  bottom: 0rpx;
  right: 10rpx;
  color: #DCDFE6;
  font-size: 24rpx;
  line-height: 50rpx;
}
.img_con{
  margin-left: 2%;
  margin-top: 30rpx;
  margin-right: 56rpx;
  width: 160rpx;
  height: 160rpx;
  border: 1px dashed rgba(0, 0, 0, .1);
  float: left;
  position: relative;
}
.img_con .imgwh{
  width: 100%;
  height:100%;
}
.img_con .defaultimg{
  width: 50%;
  height: 50%;
  display: block;
  margin: 25% auto;
}
/* 图片删除按钮 */
.imgdel{position: absolute; top: -25rpx; right: -25rpx;}
.imgdel image{width: 50rpx; height: 50rpx;}

.foot_btn{width:100%;height:80rpx; padding: 20rpx 0;position: fixed; bottom: 0rpx; background-color: #fff;}
.add_changed{width:96%;height:80rpx;line-height: 80rpx; background:rgba(236,187,73,1);border-radius:2px; color: #fff; text-align: center; margin-left: 2%;}

