<view class="model user_wx">
  <view class="clearfix user_wx_li">
    <label class="fl">手机号</label>
    <view class="weui-cell weui-cell_input fl">
      <input class="weui-input" type="number" placeholder="请输入新手机号" data-name="data_phone" value="{{data_phone}}" bindinput='getInputKey' />
    </view>
    <view class="fr get_yzm" bindtap="save"><text>{{sendTime}}</text></view>
  </view>
  <view class="clearfix user_wx_li">
    <label class="fl">验证码</label>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" type="number" placeholder="请输入验证码"  data-name="data_code" value="{{data_code}}" placeholder-class="placeholder_style" bindblur='getInputCode'/>
      </view>
    </view>
  </view>
</view>
<navigator url='../area/add_zwarea/add_zwarea' class=''>
  <text class="edit_tel_btn x-center" bindtap="savebtn">确定</text>
</navigator>
