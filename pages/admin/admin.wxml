                <view class="flex-item demo-text-4">
                <view class="not_accnum">{{order_not.other}}</view>
                <view><text class="iconfont icon-gengduo1"></text></view>
                <view class="not_accname">其它</view>
                </view> -->
            </view>
        </view>
    </view>
</view>