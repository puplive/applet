<import src="../tabbar/tabbar.wxml"/>
<template is="tabBar" data="{{tabBar}}"/>
<!-- 主内容 -->
<view class="index-bd">
  <view class="kind-list">
    <block wx:for-items="{{list}}" wx:key="{{item.id}}">
      <view class="kind-list-item">
        <view id="{{item.id}}" class="kind-list-item-hd {{item.open ? 'kind-list-item-hd-show' : ''}}" bindtap="kindToggle">
          <view class="kind-list-text">
            <view class="fl">
              <view class="jt_down"><text class="iconfont icon-leidian"></text></view>
              {{item.name}}
            </view>
            <view class="fr people_num"><text class="active_num">8/8</text></view>
          </view>
        </view>
        <view class="kind-list-item-bd {{item.open ? 'kind-list-item-bd-show' : ''}}">
          <view class="navigator-box {{item.open ? 'navigator-box-show' : ''}}">
            <block wx:for-items="{{item.pages}}" wx:for-item="page" wx:key="*item">
              <navigator url="pages/{{page}}/{{page}}" class="navigator">
                <view class="navigator-text clearfix">
                  <view class="fl people_list">
                    <image src="{{page.img}}"></image>
                    <text>{{page.name}}</text>
                  </view>
                  <text class="fr people_tel">{{page.tel}}</text>
                </view>
              </navigator>
            </block>
          </view>
        </view>
      </view>
    </block>
  </view>
</view>
<view class="not_accepted">
  <view class="page-section-title">
    <text>未接单</text>
  </view>
  <view class="page-section-spacing">
    <view class="flex-wrp" style="flex-direction:row;">
      <view class="flex-item demo-text-1">
        <view class="not_accnum">21</view>
        <view><text class="iconfont icon-leidian"></text></view>
        <view class="not_accname">水接驳</view>
      </view>
      <view class="flex-item demo-text-2">
        <view class="not_accnum">30</view>
        <view><text class="iconfont icon-leidian"></text></view>
        <view class="not_accname">电接驳</view>
      </view>
      <view class="flex-item demo-text-3">
        <view class="not_accnum">10</view>
        <view><text class="iconfont icon-leidian"></text></view>
        <view class="not_accname">租赁</view>
      </view>
      <view class="flex-item demo-text-4">
        <view class="not_accnum">40</view>
        <view><text class="iconfont icon-leidian"></text></view>
        <view class="not_accname">其它</view>
      </view>
    </view>
  </view>
</view>