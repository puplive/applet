                <view class="not_accname">电接驳</view>
                </view>
                <view class="flex-item demo-text-3">
                <view class="not_accnum">{{order_not.lease}}</view>
                <view><text class="iconfont icon-zhuozi"></text></view>
                <view class="not_accname">租赁</view>
