page{ background-color: #fff;}
.col {
  flex-wrap:wrap;
} 
.contain{padding-bottom: 120rpx; width: 96%; margin: 0 2%;}
.zwh{width:96%; padding: 0 2%;font-size: 36rpx; color: #303133;line-height: 80rpx; margin-top: 20rpx;}
.zwh .question{float: right; font-size: 28rpx; color: #606266;}
.person_name{width:96%; padding: 0 2%;font-size: 32rpx; margin-bottom: 20rx; color: #000000;}
.list_con{margin-top: 16rpx; width: 96%; padding: 2%; border-bottom:1px solid #F5F7FA;}
/* .list_con:nth-child(2n){background-color:#F9FAFB; border-radius: 4rpx;} */
.list_con .time{ color: #909399; font-size: 28rpx; line-height: 50rpx;}
.list_con .acc_img image{width:calc(100% - 16rpx);height: 160rpx; margin-top: 10rpx; }
.list_con .acc_img image:nth-child(4n){margin-right: 0;}
.status{color: #ECBB49; font-size: 32rpx; margin-top: 20rpx;}

.desc{
  font-size: 28rpx;
  height: 300rpx;
  line-height:100rpx;
  /* border-bottom: 1px solid rgba(0, 0, 0, .1); */
  /* padding: 0 20rpx; */
  position: relative;
}
.desc label{font-size: 32rpx;}
.textarea-wrp textarea{
  width: 100%;
  height: 150rpx;
  line-height: 50rpx;
  padding: 10rpx 0 28rpx;
}
.textlimit{
  position: absolute;
  bottom: 0rpx;
  right: 10rpx;
  color: #DCDFE6;
  font-size: 24rpx;
  line-height: 50rpx;
}
.img_con{
  /* margin-left: 2%; */
  margin-top: 30rpx;
  margin-right: 56rpx;
  width: 160rpx;
  height: 160rpx;
  border: 1px dashed rgba(0, 0, 0, .1);
  float: left;
  position: relative;
}
.img_con .imgwh{
  width: 100%;
  height:100%;
}
.img_con .defaultimg{
  width: 50%;
  height: 50%;
  display: block;
  margin: 25% auto;
}
/* 图片删除按钮 */
.imgdel{position: absolute; top: -25rpx; right: -25rpx;}
.imgdel image{width: 50rpx; height: 50rpx;}

.al_reject{color: #E54C4A; font-size: 32rpx;}
.reject_be{color:#303133; font-size:32rpx;}
